<!DOCTYPE html>
<html>
  <head>
    <title>Lista de Alunos</title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
      <main class="container">
        <div class="d-flex justify-content-between">
          <h1>Lista de Usuarios</h1>
          <form action="/users/search" class="d-flex justify-content-around align-itens-center" method="get">
            <input type="text" name="key" placeholder="Pesquisar..." class="form-control">
            <button type="submit" class="ml-3 btn btn-success">Pesquisar</button>
          </form>
        </div>
       
        <table class="table">

            <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Nome</th>
                  <th scope="col">Sobrenome</th>
                  <th scope="col">Ano de Matricula</th>
                </tr>
            </thead>
            
            <tbody>
              <% alunos.forEach(function(aluno) { %>
                <tr>
                  <th scope="row"><%= aluno.id %></th>
                  <th><%= aluno.nome %></th>
                  <th><%= aluno.sobrenome %></th>
                  <th><%= aluno.ano_matricula %></th>
                  <th>
                    <a href="/users/ver/<%= aluno.id %>"class="btn btn-primary">Ver Dados</a>
                    <a href="/users/editar/<%= aluno.id %>" class="btn btn-warning">Editar Dados</a>
                    <form action="/users/deletar/<%= aluno.id %>?_method=DELETE " method="post">
                      <button class="btn btn-danger" type="submit">Excluir</button>
                    </form>
                  </th>
                  

                </tr>
              <% }); %>
            </tbody>

        </table>


      </main>
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
  </body>
</html> 